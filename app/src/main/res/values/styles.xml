<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="HipartDetailIntroTagLayout">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/bg_frag_hip_det_intro_round</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="HipartDetailIntroPrimaryTagLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_tag_purple</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="nanum_extra_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_extra_bold</item>
    </style>
    <style name="nanum_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_bold</item>
    </style>
    <style name="nanum_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_regular</item>
    </style>
    <style name="nanum_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_light</item>
    </style>

    <style name="EdittextStyle" parent="AppTheme">
        <item name="android:textColorHighlight">@color/colorHIpatback</item>
        <item name="colorControlActivated">@color/colorHIpat</item>
    </style>
</resources>
