<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.login.LoginActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingHorizontal="16dp"
            android:gravity="center">
        <ImageView
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginBottom="24dp"
                app:srcCompat="@color/design_default_color_primary"
                android:id="@+id/img_login_act_logo"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_border"
                android:layout_marginBottom="20dp"
                android:id="@+id/rl_login_act_email">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/login_id_off_icon"
                    android:id="@+id/img_login_act_email_off"/>
            <EditText
                    android:inputType="textEmailAddress"
                    android:textColor="#434343"
                    android:textColorHint="#c7c7c7"
                    android:textSize="13sp"
                    android:hint="이메일"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/img_login_act_email_off"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="16dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/edt_login_act_email"
                    android:layout_weight="1"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_border"
                android:layout_marginBottom="20dp"
                android:id="@+id/rl_login_act_password">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/login_password_off_icon"
                    android:id="@+id/img_login_act_password_off"/>
            <EditText
                    android:inputType="textPassword"
                    android:textColor="#434343"
                    android:hint="패스워드"
                    android:textColorHint="#c7c7c7"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/img_login_act_password_off"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="16dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/edt_login_act_password"
                    android:layout_weight="1"/>
        </RelativeLayout>
        <Button
                android:text="로그인"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/primary_border_fill"
                android:id="@+id/btn_login_act_submit"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="비밀번호 찾기"
                    android:textSize="11sp"
                    android:textColor="#707070"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:id="@+id/txt_login_act_findpassword"
                    android:layout_weight="1"/>
            <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="#707070"
                    android:layout_gravity="center"
                    android:id="@+id/view3"
                    android:layout_weight="1"/>
            <TextView
                    android:text="회원가입"
                    android:textSize="11sp"
                    android:textColor="#707070"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/txt_login_act_signup"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>