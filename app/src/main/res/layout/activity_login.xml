<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:id="@+id/sv_login_act"
        android:background="#ffffff"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            tools:context=".ui.login.LoginActivity">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:paddingHorizontal="50dp"
                android:gravity="center">
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="45dp"
                    app:srcCompat="@drawable/login_logo_img"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_border"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/rl_login_act_email">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/login_id_off_icon"
                        android:id="@+id/img_login_act_email_off"/>
                <EditText
                        android:inputType="textEmailAddress"
                        android:textColor="#434343"
                        android:textColorHint="#c7c7c7"
                        android:textSize="13sp"
                        android:hint="이메일"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img_login_act_email_off"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginVertical="16dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/edt_login_act_email"
                        android:layout_weight="1"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_border"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/rl_login_act_password">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/login_password_off_icon"
                        android:id="@+id/img_login_act_password_off"/>
                <EditText
                        android:inputType="textPassword"
                        android:textColor="#434343"
                        android:hint="패스워드"
                        android:textColorHint="#c7c7c7"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img_login_act_password_off"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginVertical="16dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/edt_login_act_password"
                        android:layout_weight="1"/>
            </RelativeLayout>
            <Button
                    android:text="로그인"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanum_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_border_fill"
                    android:id="@+id/btn_login_act_submit"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_login_act_sign_in"

                    android:layout_marginTop="14dp">
                <TextView
                        android:text="비밀번호 찾기"
                        android:textSize="11sp"
                        android:textColor="#707070"
                        android:fontFamily="@font/nanum_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:id="@+id/txt_login_act_findpassword"
                        android:layout_weight="1"/>
                <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:background="#707070"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:text="회원가입"
                        android:layout_marginVertical="4dp"
                        android:textSize="11sp"
                        android:textColor="#707070"
                        android:fontFamily="@font/nanum_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:id="@+id/txt_login_act_signup"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>