<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include
                android:id="@+id/toolbar_hipat"
                layout="@layout/toolbar_hipat"/>
        <android.support.v4.view.ViewPager
                android:id="@+id/vp_hipat_frag_ad"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="2dp"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingHorizontal="24dp"
        />
        <android.support.design.widget.TabLayout
                android:id="@+id/tl_hipat_frag_pat_nav"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:paddingHorizontal="28dp"
                android:overScrollMode="never"
                app:tabIndicatorFullWidth="false"
                app:tabMode="scrollable"
                app:tabIndicatorColor="#7947fd"
                app:tabMaxWidth="63dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#c7c7c7"
                android:layout_marginHorizontal="24dp"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                        android:id="@+id/vp_hipat_frag_nav"
                        android:layout_width="match_parent"
                        android:layout_height="800dp"
                        android:overScrollMode="never"
                        android:background="#fafafa">
                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_hipat_frag_portfolio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                    />
                </android.support.v4.view.ViewPager>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <ImageView
            android:id="@+id/btn_frag_hipat_filter"
            android:src="@drawable/hipat_filter_floating_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>