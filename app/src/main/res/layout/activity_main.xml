    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="56dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--app:tabIndicatorHeight="0dp"-->
    <!--android:elevation="4dp">-->
    <!--</android.support.design.widget.TabLayout>-->

</RelativeLayout>