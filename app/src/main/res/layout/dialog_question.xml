<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:clipToPadding="false"
                android:layout_marginHorizontal="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_box">>
        <RelativeLayout
                android:padding="10dp"
                android:background="@drawable/primary_border"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="134dp">
            <EditText
                    android:id="@+id/edt_question_dialog_content"
                    android:hint="입력해주세요."
                    android:textSize="11sp"
                    android:textColor="#242424"
                    android:textColorHint="#a2a2a2"
                    android:background="@null"
                    android:gravity="top"
                    android:fontFamily="@font/nanum_regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView
                android:text="담당자에게 금방 전달해드릴게요 !"
                android:textSize="15sp"
                android:textColor="#707070"
                android:fontFamily="@font/nanum_regular"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="조금만 기다려주세요 :)"
                android:textSize="15sp"
                android:textColor="#707070"
                android:fontFamily="@font/nanum_regular"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_question_dialog_ok"
                android:text="전송"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/nanum_extra_bold"
                android:background="@drawable/primary_border_fill"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>