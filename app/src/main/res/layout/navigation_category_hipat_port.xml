<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">
    <RelativeLayout android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:id="@+id/rl_hipat_nav_all">
        <TextView
                android:id="@+id/txt_hipat_nav_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/selector_tab_textcolor"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="전체"
                android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <RelativeLayout android:layout_width="64dp" android:layout_height="match_parent"
                    android:id="@+id/rl_hipat_nav_cpat">
        <TextView
                android:id="@+id/txt_hipat_nav_cpat"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/selector_tab_textcolor"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="C-PAT"
        />
    </RelativeLayout>

    <RelativeLayout android:layout_width="64dp" android:layout_height="match_parent"
                    android:id="@+id/rl_hipat_nav_epat">
        <TextView
                android:id="@+id/txt_hipat_nav_epat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/selector_tab_textcolor"
                android:lineSpacingExtra="10sp"
                android:fontFamily="@font/nanum_bold"
                android:gravity="center_horizontal"
                android:text="E-PAT"
                android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <RelativeLayout android:layout_width="64dp" android:layout_height="match_parent"
                    android:id="@+id/rl_hipat_nav_tpat">
        <TextView
                android:id="@+id/txt_hipat_nav_tpat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/selector_tab_textcolor"
                android:lineSpacingExtra="10sp"
                android:fontFamily="@font/nanum_bold"
                android:gravity="center_horizontal"
                android:text="T-PAT"
                android:layout_centerHorizontal="true"
        />

    </RelativeLayout>

    <RelativeLayout android:layout_width="64dp" android:layout_height="match_parent"
                    android:id="@+id/rl_hipat_nav_etc">
        <TextView
                android:id="@+id/txt_hipat_nav_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/selector_tab_textcolor"
                android:lineSpacingExtra="10sp"
                android:fontFamily="@font/nanum_bold"
                android:gravity="center_horizontal"
                android:text="ETC."
                android:layout_centerHorizontal="true"
        />
    </RelativeLayout>
</LinearLayout>
