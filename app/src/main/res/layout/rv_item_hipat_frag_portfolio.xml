<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/btn_rv_item_hipat_frag_port_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
    <ImageView
            android:background="@drawable/portfolio_border"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

    <ImageView
            android:id="@+id/img_rv_item_hipat_frag_port_user_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/main_profile_photo_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:id="@+id/ll_rv_item_hipat_frag_user_name"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/img_rv_item_hipat_frag_port_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/img_rv_item_hipat_frag_port_user_name"
                android:text="Nado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#242424"/>

        <ImageView
                android:src="@drawable/youtube_grey_img"
                android:id="@+id/img_rv_item_hipat_frag_kind_of_creator"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/img_rv_item_hipat_frag_pick"
                android:background="@drawable/selector_pick_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txt_rv_item_hipat_frag_how_picked"
                android:text="224"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="9sp"
                android:textColor="#c7c7c7"/>
    </LinearLayout>
    <TextView
            android:id="@+id/txt_hipat_frag_kind_of_pat"
            android:text="크리에이터"
            android:textSize="12sp"
            android:textColor="#707070"
            android:layout_toRightOf="@id/img_rv_item_hipat_frag_port_user_image"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/ll_rv_item_hipat_frag_user_name"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/rv_item_hipat_frag_portfolio_filter"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_rv_item_hipat_frag_port_user_image"
            android:layout_below="@+id/txt_hipat_frag_kind_of_pat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_hipat_filter_act_concept"
                android:text="기획"
                android:textColor="#707070"
                android:textSize="11sp"
                android:fontFamily="@font/nanum_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/selector_hipat_filter_border"
        />

            <TextView
                    android:id="@+id/tv_hipat_filter_pd"
                    android:text="먹방"
                    android:textColor="#707070"
                    android:textSize="11sp"
                    android:fontFamily="@font/nanum_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/selector_hipat_filter_border"
                    android:paddingVertical="4dp"
                    android:layout_marginLeft="4dp"
            />
            <TextView
                    android:id="@+id/tv_hipat_filter_lang"
                    android:text="영어"
                    android:textColor="#707070"
                    android:textSize="11sp"
                    android:fontFamily="@font/nanum_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/selector_hipat_filter_border"
                    android:paddingVertical="4dp"
                    android:layout_marginLeft="4dp"
            />
            <TextView
                    android:id="@+id/tv_hipat_filter_act_chinese"
                    android:text="소통"
                    android:textColor="#707070"
                    android:textSize="11sp"
                    android:fontFamily="@font/nanum_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/selector_hipat_filter_border"
                    android:paddingVertical="4dp"
                    android:layout_marginLeft="4dp"
            />
    </LinearLayout>

    <TextView
            android:text="안녕하세요~ 먹고 싶은 모든 것들을 영상으로 올리고 있답니다! 감사합니다아 :)"
            android:layout_below="@id/rv_item_hipat_frag_portfolio_filter"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="56dp"
            android:textSize="13sp"
            android:textColor="#242424"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>