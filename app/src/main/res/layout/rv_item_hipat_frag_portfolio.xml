<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/btn_rv_item_hipat_frag_port_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
    <ImageView
            android:background="@drawable/portfolio_border"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_rv_item_hipat_frag_port_user_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>
    <LinearLayout
            android:id="@+id/ll_rv_item_hipat_frag_user_name"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/img_rv_item_hipat_frag_port_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/img_rv_item_hipat_frag_port_user_name"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_bold"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#242424"/>

        <ImageView
                android:id="@+id/img_rv_item_hipat_frag_kind_of_creator"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/img_rv_item_hipat_frag_pick"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:background="@drawable/selector_pick_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txt_rv_item_hipat_frag_how_picked"
                android:text="-"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="9sp"
                android:fontFamily="@font/nanum_square_bold"
                android:textColor="#c7c7c7"/>
    </LinearLayout>
    <TextView
            android:id="@+id/txt_hipat_frag_kind_of_pat"
            android:text="-"
            android:textSize="12sp"
            android:textColor="#707070"
            android:fontFamily="@font/nanum_square_regular"
            android:layout_toRightOf="@id/img_rv_item_hipat_frag_port_user_image"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/ll_rv_item_hipat_frag_user_name"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/rv_item_hipat_frag_portfolio_filter"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/img_rv_item_hipat_frag_port_user_image"
            android:layout_below="@+id/txt_hipat_frag_kind_of_pat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_hipat_filter_act_concept"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:fontFamily="@font/nanum_square_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/main_home_first_filter_box"
                android:visibility="gone"
        />

            <TextView
                    android:id="@+id/tv_hipat_filter_pd"
                    android:text="-"
                    android:textColor="#707070"
                    android:textSize="11sp"
                    android:fontFamily="@font/nanum_square_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/selector_hipat_filter_border"
                    android:paddingVertical="4dp"
                    android:layout_marginLeft="4dp"
                    android:visibility="gone"
            />
            <TextView
                    android:id="@+id/tv_hipat_filter_lang"
                    android:text="-"
                    android:textColor="#707070"
                    android:textSize="11sp"
                    android:fontFamily="@font/nanum_square_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/selector_hipat_filter_border"
                    android:paddingVertical="4dp"
                    android:layout_marginLeft="4dp"
                    android:visibility="gone"
            />
            <TextView
                    android:id="@+id/tv_hipat_filter_act_chinese"
                    android:text="-"
                    android:textColor="#707070"
                    android:textSize="11sp"
                    android:fontFamily="@font/nanum_square_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/selector_hipat_filter_border"
                    android:paddingVertical="4dp"
                    android:layout_marginLeft="4dp"
                    android:visibility="gone"
            />
    </LinearLayout>

    <TextView
            android:id="@+id/tv_hipat_filter_act_description"
            android:text="-"
            android:maxLength="68"
            android:layout_below="@id/img_rv_item_hipat_frag_port_user_image"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="56dp"
            android:textSize="13sp"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="#242424"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>