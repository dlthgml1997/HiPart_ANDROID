<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="284dp" android:layout_height="148dp"
>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/box_rv_item_home_ad"
                    android:clipToPadding="true">

        <ImageView
                android:id="@+id/iv_tv_item_home_ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
        />

        <TextView
                android:id="@+id/tv_rv_item_home_ad_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#204e0c"
                android:text="롯데리아 더블 시리즈"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_extra_bold"
        />

        <TextView
                android:id="@+id/tv_rv_item_home_ad_des"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#204e0c"
                android:text="먹방 크리에이터들을 위한 롯데리아의 신작

신청하러가기 →"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nanum_light"
                android:layout_below="@+id/tv_rv_item_home_ad_title"
                android:layout_marginTop="4dp"
        />


    </RelativeLayout>





</RelativeLayout>