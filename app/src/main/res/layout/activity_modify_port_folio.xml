<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent" android:layout_height="match_parent"
            tools:context=".ui.modifyportfolio.ModifyPortFolioActivity"
            android:layout_marginBottom="50dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="179dp"
                                android:id="@+id/rl_act_modify_port_folio_top_box"
                >

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent" android:layout_height="106dp"
                            android:background="#3eecad"
                            android:id="@+id/cl_act_modify_port_folio_top_bar"
                    >
                        <ImageView
                                android:src="@android:drawable/btn_star_big_on"
                                android:layout_width="85dp"
                                android:layout_height="67.7dp"
                                android:id="@+id/imageView" android:layout_marginTop="13dp"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="11dp" android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0.181"/>
                        <ImageView
                                android:src="@android:drawable/btn_star_big_on"
                                android:layout_width="41.3dp"
                                android:layout_height="35dp"
                                android:id="@+id/imageView2" app:layout_constraintStart_toEndOf="@+id/imageView"
                                android:layout_marginTop="40dp"
                                app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="44dp"/>
                        <ImageView
                                android:src="@android:drawable/btn_star_big_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView3" app:layout_constraintStart_toEndOf="@+id/imageView2"
                                android:layout_marginStart="32dp" android:layout_marginTop="20dp"
                                app:layout_constraintTop_toTopOf="@+id/imageView"/>
                        <ImageView
                                android:src="@android:drawable/btn_star_big_on"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:id="@+id/imageView4" app:layout_constraintStart_toEndOf="@+id/imageView3"
                                android:layout_marginStart="13dp" android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp" android:layout_marginTop="22dp"
                                app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
                        <ImageView
                                android:src="@android:drawable/btn_star_big_on"
                                android:layout_width="40dp"
                                android:layout_height="16dp"
                                android:id="@+id/imageView5"
                                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="30dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                                android:layout_marginEnd="8dp"/>
                        <ImageView
                                android:src="@drawable/pofol_back_white_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_modify_port_folio_back" android:layout_marginTop="12dp"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="17dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="#ffffff"
                                android:lineSpacingExtra="3sp"
                                android:text="Nado"
                                android:id="@+id/textView3"
                                android:layout_marginTop="54dp"
                                android:fontFamily="@font/nanum_bold"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="111dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textColor="#ffffff"
                                android:lineSpacingExtra="2sp"
                                android:text="님"
                                android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/textView3"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/nanum_regular"
                                app:layout_constraintTop_toTopOf="@+id/textView3"
                                app:layout_constraintBottom_toBottomOf="@+id/textView3"/>
                        <ImageView
                                android:src="@drawable/selector_youtube"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_youtube" android:layout_marginTop="55dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"/>

                        <ImageView
                                android:src="@drawable/selector_afreeca"
                                android:layout_width="19dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_afreeca" android:layout_marginTop="54dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/btn_youtube" android:layout_marginStart="2dp"/>

                        <ImageView
                                android:src="@drawable/selector_twich"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_twich" android:layout_marginTop="55dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/btn_afreeca" android:layout_marginStart="2dp"/>

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/modify_sticker"
                                android:id="@+id/imageView11"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toEndOf="@+id/textView4"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/btn_twich"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_modify_port_folio_act_job" android:text="크리에이터"
                                android:layout_marginStart="111dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="87dp"
                                android:textSize="11dp"
                                android:fontFamily="@font/nanum_regular" android:textColor="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"/>

                    </android.support.constraint.ConstraintLayout>
                    <ImageView
                            android:src="@drawable/main_profile_photo_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/iv_act_modify_port_folio_user"
                            android:layout_marginTop="68dp"
                            android:layout_marginLeft="25dp"/>

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_below="@id/cl_act_modify_port_folio_top_bar"
                                  android:layout_toRightOf="@id/iv_act_modify_port_folio_user"
                                  android:layout_marginTop="12.7dp"
                                  android:layout_marginLeft="11dp">

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:layout_marginRight="56dp">
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="10sp"
                                      android:textColor="#434343"
                                      android:lineSpacingExtra="2sp"
                                      android:text="구독자"
                                      android:fontFamily="@font/nanum_regular"
                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#575757"
                                    android:lineSpacingExtra="2sp"
                                    android:text="17,462"
                                    android:layout_marginTop="11dp"
                                    android:fontFamily="@font/nanum_regular"

                            />

                        </LinearLayout>

                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:orientation="vertical"
                        >

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textSize="10sp"
                                      android:textColor="#434343"
                                      android:lineSpacingExtra="2sp"
                                      android:text="하이파이브 매칭"
                                      android:fontFamily="@font/nanum_regular"
                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#575757"
                                    android:lineSpacingExtra="2sp"
                                    android:text="331"
                                    android:fontFamily="@font/nanum_regular"
                                    android:layout_marginTop="11dp"/>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                        android:id="@+id/layout_modify_portfolio"
                        android:layout_width="match_parent" android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_below="@id/rl_act_modify_port_folio_top_box">
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="#e4e4e4"
                          android:layout_marginHorizontal="25dp"/>


                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="24dp">

                        <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_modify_port_folio_act_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                        ></android.support.v7.widget.RecyclerView>

                        <RelativeLayout
                                android:id="@+id/btn_modify_port_folio_act_modify_filter"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/rv_modify_port_folio_act_filter"
                                android:layout_marginLeft="3dp"
                                android:paddingVertical="4dp"
                                android:paddingHorizontal="10dp"
                                android:background="@drawable/signup_gray_border">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="필터수정하기"
                                      android:textSize="10sp"
                                      android:textColor="#707070"
                                      android:fontFamily="@font/nanum_light"
                                      android:layout_centerInParent="true"
                            />
                        </RelativeLayout>


                    </RelativeLayout>


                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:paddingHorizontal="25.5dp"
                                  android:orientation="vertical"
                                  android:paddingTop="20.5dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#242424"
                                android:lineSpacingExtra="1sp"
                                android:text="소개"
                                android:fontFamily="@font/nanum_bold"
                        />
                        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:background="@null"
                                  android:textSize="13sp"
                                  android:textColor="#242424"
                                  android:lineSpacingExtra="8dp"
                                  android:layout_marginTop="11dp"
                                  android:hint="바꿀 소개 멘트를 입력해주세요!"
                        />

                    </LinearLayout>

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="204dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#f6f6f6">

                        <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/rl_tmp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="24dp">

                            <TextView
                                    android:id="@+id/tv_act_modify_port_folio_top_work_box"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="#242424"
                                    android:lineSpacingExtra="1sp"
                                    android:text="작품"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/nanum_bold"/>

                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                       android:src="@drawable/hipat_tpatx_work_adot_img"
                                       android:layout_toRightOf="@+id/tv_act_modify_port_folio_top_work_box"
                                       android:layout_marginLeft="4dp"
                            />

                            <RelativeLayout
                                    android:id="@+id/btn_modify_port_folio_act_work_add_work"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/grey_nine_radius_border"
                                    android:layout_marginRight="24dp">

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="작품 올리기"
                                          android:textSize="11sp"
                                          android:textColor="#707070"
                                          android:fontFamily="@font/nanum_light"
                                          android:layout_marginHorizontal="10dp"
                                          android:layout_marginVertical="3dp"

                                />

                            </RelativeLayout>

                        </RelativeLayout>


                        <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                                android:layout_height="match_parent"
                                                                android:layout_marginTop="11dp"
                                                                android:id="@+id/rv_modify_port_folio_act_work"
                                                                android:clipToPadding="true"
                                                                android:layout_below="@+id/rl_tmp"
                                                                android:background="#f6f6f6"
                                                                android:visibility="gone"
                        ></android.support.v7.widget.RecyclerView>

                        <LinearLayout
                                android:id="@+id/rl_modify_port_folio_act_no_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                        >

                            <ImageView android:layout_width="82dp" android:layout_height="52dp"
                                       android:src="@drawable/primary_border"
                                       android:layout_gravity="center_horizontal"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:textSize="17sp"
                                      android:textColor="#484848"
                                      android:fontFamily="@font/nanum_bold"
                                      android:text="업로드된 작품이 없어요"
                                      android:layout_marginTop="22dp"
                                      android:layout_gravity="center_horizontal"/>

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:textSize="12sp"
                                      android:textColor="#a2a2a2"
                                      android:fontFamily="@font/nanum_regular"
                                      android:text="오늘의 작품 올리러 가기→"
                                      android:layout_marginTop="11dp"
                                      android:layout_gravity="center_horizontal"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:paddingTop="20dp"
                                  android:paddingHorizontal="25dp"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#242424"
                                android:lineSpacingExtra="1sp"
                                android:text="이런 하이팟을 원해요!"
                                android:fontFamily="@font/nanum_bold"
                        />

                        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:background="@null"
                                  android:textSize="13sp"
                                  android:lineSpacingExtra="8dp"
                                  android:fontFamily="@font/nanum_regular"
                                  android:layout_marginTop="11dp"
                                  android:textColor="#242424"
                                  android:hint="이런 하이팟을 원해요"
                        />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="20dp"
                            android:paddingHorizontal="25dp"
                            android:layout_marginBottom="8dp"
                    >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#242424"
                                android:lineSpacingExtra="1sp"
                                android:text="학력/자격증/수상/경력"
                                android:fontFamily="@font/nanum_bold"
                        />
                        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:background="@null"
                                  android:textSize="13sp"
                                  android:lineSpacingExtra="8dp"
                                  android:fontFamily="@font/nanum_regular"
                                  android:layout_marginTop="11dp"
                                  android:textColor="#242424"
                                  android:hint="학력 자격증 수상 경력"
                        />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout android:layout_width="match_parent" android:layout_height="42dp"
                  android:layout_marginHorizontal="16dp"
                  android:orientation="horizontal"
                  android:background="@drawable/box_modify_portfolio_act"
                  android:layout_marginTop="32dp"
                  android:layout_marginBottom="8dp"
                  android:layout_alignParentBottom="true">

        <RelativeLayout
                android:id="@+id/btn_modify_port_folio_cancel"
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="취소"
                      android:textColor="#FFFFFF"
                      android:textSize="15sp"
                      android:fontFamily="@font/nanum_extra_bold"
                      android:layout_centerInParent="true"/>
        </RelativeLayout>

        <View android:layout_width="1dp" android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:layout_marginVertical="8dp"/>

        <RelativeLayout
                android:id="@+id/btn_modify_port_folio_confirm"
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="수정 완료"
                      android:textColor="#FFFFFF"
                      android:textSize="15sp"
                      android:fontFamily="@font/nanum_extra_bold"
                      android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>



