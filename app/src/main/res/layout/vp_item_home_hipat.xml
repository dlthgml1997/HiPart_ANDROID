<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="310dp"
        android:layout_height="172dp">

    <RelativeLayout
            android:id="@+id/root_hipat_frag"
            android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/main_mint_list_box">
        <LinearLayout
                android:id="@+id/ll_rv_home_hipat_user_name_box"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_rv_home_hipat_user"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

            <TextView
                    android:maxLength="5"
                    android:id="@+id/tv_rv_home_hipat_user"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="#242424"
                    android:fontFamily="@font/nanum_bold"/>

            <ImageView
                    android:id="@+id/iv_rv_home_hipat_platform"
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                       android:src="@drawable/youtube_grey_img"
                       android:layout_marginLeft="4dp"
                       android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_rv_home_hipat_job"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp"
                android:textColor="#707070"
                android:layout_below="@+id/ll_rv_home_hipat_user_name_box"
                android:layout_toRightOf="@+id/iv_rv_home_hipat_user"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_regular"
        />

        <LinearLayout
                android:id="@+id/btn_rv_home_hipat_pick"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true">

            <ImageView
                    android:id="@+id/iv_rv_home_hipat_pick"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/selector_pick_icon"/>

            <TextView
                    android:id="@+id/tv_rv_home_hipat_pick_num"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#c7c7c7"
                    android:text="-"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
            />

        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_rv_home_hipat_user"
                android:layout_width="75dp" android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

        <TextView
                android:id="@+id/tv_rv_home_hipat_description"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/iv_rv_home_hipat_user"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:textColor="#242424"
                android:maxLength="50"
                android:fontFamily="@font/nanum_regular"
                android:lineSpacingExtra="8dp"
                android:text="-"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@+id/iv_rv_home_hipat_user"
                      android:layout_below="@+id/tv_rv_home_hipat_job"
                      android:layout_marginTop="10dp">

                <TextView
                        android:id="@+id/tv_rv_home_hipat_theme_first"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="11sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/nanum_light"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_home_first_filter_box"
                        android:layout_centerInParent="true"
                />

                <TextView
                        android:id="@+id/tv_rv_home_hipat_theme_second"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="11sp"
                        android:textColor="#7947fd"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_home_filter_box"
                        android:fontFamily="@font/nanum_light"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                />



                <TextView
                        android:id="@+id/tv_rv_home_hipat_theme_third"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="11sp"
                        android:textColor="#7947fd"
                        android:fontFamily="@font/nanum_light"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_home_filter_box"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                />



                <TextView
                        android:id="@+id/tv_rv_home_hipat_theme_fourth"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="11sp"
                        android:textColor="#7947fd"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/main_home_filter_box"
                        android:fontFamily="@font/nanum_light"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="4dp"
                />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
