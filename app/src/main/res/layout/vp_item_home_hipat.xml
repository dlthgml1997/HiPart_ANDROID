<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="284dp"
        android:layout_height="172dp">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:background="@drawable/main_mint_list_box">
        <LinearLayout
                android:id="@+id/ll_rv_home_hipat_user_name_box"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_rv_home_hipat_user"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_rv_home_hipat_user"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Nado"
                    android:textSize="20sp"
                    android:textColor="#242424"
                    android:fontFamily="@font/nanum_bold"/>

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/youtube_grey_img"
                       android:layout_marginLeft="6dp"
                       android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_rv_home_hipat_job"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="크리에이터"
                android:textSize="12sp"
                android:textColor="#707070"
                android:layout_below="@+id/ll_rv_home_hipat_user_name_box"
                android:layout_toRightOf="@+id/iv_rv_home_hipat_user"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nanum_regular"
        />

        <LinearLayout
                android:id="@+id/btn_rv_home_hipat_pick"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true">

            <ImageView
                    android:id="@+id/iv_rv_home_hipat_pick"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@drawable/main_pick_off_icon"/>

            <TextView
                    android:id="@+id/tv_rv_home_hipat_pick_num"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#c7c7c7"
                    android:text="224"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
            />

        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_rv_home_hipat_user"
                android:layout_width="75dp" android:layout_height="75dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/main_profile_photo_image"/>

        <TextView
                android:id="@+id/tv_rv_home_hipat_description"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_below="@+id/iv_rv_home_hipat_user"
                android:layout_marginTop="16dp"
                android:textSize="13sp"
                android:textColor="#242424"
                android:fontFamily="@font/nanum_regular"
                android:lineSpacingExtra="4dp"
                android:text="안녕하세요~ 먹고 싶은 모든 것들을 영사으로 올리고 있답니다! 감사합니다 :)"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@+id/iv_rv_home_hipat_user"
                      android:layout_below="@+id/tv_rv_home_hipat_job"
                      android:layout_marginTop="8dp">

            <RelativeLayout android:layout_width="40dp" android:layout_height="18dp"
                            android:background="@drawable/box_rv_item_home_hipat"

            >

                <TextView
                        android:id="@+id/tv_rv_home_hipat_theme_first"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="먹방"
                        android:textSize="11sp"
                        android:textColor="#707070"
                        android:fontFamily="@font/nanum_light"
                        android:layout_centerInParent="true"
                />
            </RelativeLayout>

            <RelativeLayout android:layout_width="40dp" android:layout_height="18dp"
                            android:background="@drawable/box_rv_item_home_hipat"
                            android:layout_marginLeft="4dp"
            >

                <TextView
                        android:id="@+id/tv_rv_home_hipat_theme_second"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="먹방"
                        android:textSize="11sp"
                        android:textColor="#707070"
                        android:fontFamily="@font/nanum_light"
                        android:layout_centerInParent="true"
                />
            </RelativeLayout>

            <RelativeLayout android:layout_width="40dp" android:layout_height="18dp"
                            android:background="@drawable/box_rv_item_home_hipat"
                            android:layout_marginLeft="4dp"
            >

                <TextView
                        android:id="@+id/tv_rv_home_hipat_theme_third"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="먹방"
                        android:textSize="11sp"
                        android:textColor="#707070"
                        android:fontFamily="@font/nanum_light"
                        android:layout_centerInParent="true"
                />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
