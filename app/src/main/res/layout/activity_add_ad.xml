<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ad_add.AddAdActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
        <TextView
                android:text="협찬 신청하기"
                android:textColor="#707070"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_bold"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_width="360dp"
                    android:layout_height="198dp">
                <android.support.v4.view.ViewPager
                        android:id="@+id/vp_add_ad_slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </android.support.v4.view.ViewPager>
                <android.support.design.widget.TabLayout
                        android:id="@+id/tl_main_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        app:tabIndicatorHeight="0dp"
                        app:tabBackground="@drawable/add_ad_dot_selector">
                </android.support.design.widget.TabLayout>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="30dp">
                <TextView
                        android:text="삼겹살 파티파티"
                        android:textColor="#434343"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/txt_addad_act_title"/>
                <TextView
                        android:text="먹방 크리에이터들을 위한 삼겹살 협찬"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/txt_addad_act_title_des"/>
                <View
                        android:layout_width="match_parent"
                        android:background="#f0f0f0"
                        android:layout_height="1dp"
                        android:layout_marginBottom="20dp"/>
                <TextView
                        android:text="[망원] 하이팟 아지트"
                        android:textColor="#434343"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/txt_addad_act_store"/>
                <TextView
                        android:text="삼겹살로 서울을 제패한 하이팟 아지트에 초대합니다 ! "
                        android:textColor="#434343"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/txt_addad_act_title_store_des"/>
                <View
                        android:layout_width="match_parent"
                        android:background="#f0f0f0"
                        android:layout_height="1dp"
                        android:layout_marginBottom="20dp"/>
                <TextView
                        android:text="제공 내역"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:text="7만원 상당의 육류 + 식사류 + 주류
                        \n1. 육류 – 삼겹살, 목살
                        \n2. 식사류 – 구워먹는 치즈
                        \n3. 10,000원 이하 제공
                        \n*1,2 메뉴는 필수로 시키고 남은 금액은 다른 음식으로 대체
                        \n가능 (차액 환불 X)
                        \n*추가 인원 및 메뉴 별도 지불(음료,주류 포함)"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:lineSpacingExtra="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/txt_addad_act_offer"/>
                <TextView
                        android:text="필수 키워드"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:text="앱잼, 망원동 단체회식
                        \n1. 제목 : 업체명 + 자율 키워드
                        \n2. 영상 : 영상 URL
                        \n필수 키워드 및 띄어쓰기가 지켜지지 않으면 수정 요청 사항
                        \n이 있을 수 있습니다."
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"

                        android:lineSpacingExtra="8dp"
                        android:id="@+id/txt_addad_act_keyword"/>
                <TextView
                        android:text="발표일"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:text="2019-07-07"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/txt_addad_act_date"/>
                <TextView
                        android:text="사용 &amp; 리뷰 기간"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:text="2019-07-14 ~ 2019- 08-14"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/txt_addad_act_review"/>
                <TextView
                        android:text="영업 시간 (휴무일 포함)"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:text="월 ~ 금 10:00 ~ 22:00
                        \n토 ~ 일 12:00 ~ 22:00
                        \n라스트 오더 21:30
                        \n연중무휴"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:lineSpacingExtra="8dp"
                        android:id="@+id/txt_addad_act_opentime"/>
                <TextView
                        android:text="영상 등록 시 유의사항"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:text="1. 영상 내에 지도 첨부
                        \n2. 전체 음식 영상에 담기"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:lineSpacingExtra="8dp"
                        android:id="@+id/txt_addad_act_upload_note"/>
                <TextView
                        android:text="방문 시 유의사항"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"/>
                <TextView
                        android:text="1. 방문 2~3일 전 예약(당일 예약시 체험 불가)
                        \n2. 금요일 예약 18:00까지 가능
                        \n3. 토요일 예약 점심시간 or 17:00까지 예약 가능
                        \n4 .타쿠폰 중복적용 불가/테이크아웃불가"
                        android:textColor="#707070"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanum_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="27dp"
                        android:lineSpacingExtra="8dp"
                        android:id="@+id/txt_addad_act_visit_note"/>
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="334dp"
                    android:layout_height="42dp"
                    android:background="@drawable/primary_border_fill"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="7dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/btn_addad_act_cancle">
                        <TextView
                                android:text="취소"
                                android:textSize="15sp"
                                android:textColor="#ffffff"
                                android:fontFamily="@font/nanum_extra_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="1dp"
                            android:layout_height="31dp"
                            android:background="#ffffff"
                            android:layout_gravity="center_vertical"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/btn_addad_act_next">
                        <TextView
                                android:text="다음"
                                android:textSize="15sp"
                                android:textColor="#ffffff"
                                android:fontFamily="@font/nanum_extra_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>