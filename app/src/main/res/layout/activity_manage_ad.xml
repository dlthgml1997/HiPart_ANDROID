<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ad_manage_admin.ManageAdActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_grey_icon"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/btn_toolbar_manage_ad_back"/>
        <TextView
                android:text="광고 관리"
                android:textColor="#707070"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_bold"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_toolbar_manage_ad_title"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ad_adplus_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="24dp"
                android:id="@+id/btn_toolbar_manage_ad_add"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_manage_ad_overview_list"
            android:layout_marginHorizontal="24dp"/>

</LinearLayout>