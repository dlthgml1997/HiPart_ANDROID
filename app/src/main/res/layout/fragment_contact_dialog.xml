<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                tools:context=".ui.hipart.ContactAlertDialog"
                android:layout_marginHorizontal="56dp"
                android:background="@drawable/bg_contact_dialog">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"

                  android:orientation="vertical"
                  android:gravity="center_horizontal"
                  android:paddingTop="48dp">

        <TextView style="@style/nanum_regular"
                  android:textSize="20sp"
                  android:text="연락처를 결제하려면,"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="12dp">
            <TextView style="@style/nanum_bold"
                      android:id="@+id/tv_contact_dia_pang"
                      android:textSize="20sp"
                      android:text="3팡"
                      android:textColor="#7947fd"/>
            <TextView style="@style/nanum_regular"
                      android:textSize="20sp"
                      android:text="이 필요합니다."/>
        </LinearLayout>

        <TextView style="@style/nanum_light"
                  android:textSize="14sp"
                  android:text="구매조건 확인 및 결제진행 동의"
                  android:layout_marginTop="48dp"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="12dp"
                      android:gravity="center"
        android:id="@+id/ll_contact_dial_frag_term">
            <ToggleButton android:layout_width="16dp" android:layout_height="16dp"
                          android:id="@+id/btn_contact_dial_term_accept"
                          android:background="@drawable/selector_contact_dialog_term_accept"
                          android:text=""
                          android:textOn=""
                          android:textOff=""
                          android:checked="false"/>
            <TextView style="@style/nanum_regular"
                      android:textSize="16sp"
                      android:text="하이파이브 하시겠어요?"
                      android:layout_marginLeft="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button android:layout_width="match_parent" android:layout_height="48dp"
            style="@style/nanum_extra_bold"
            android:text="확인"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_contact_alert_before"
    android:id="@+id/btn_contact_dial_confirm"/>
</RelativeLayout>