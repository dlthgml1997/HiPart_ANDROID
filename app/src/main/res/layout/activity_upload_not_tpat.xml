<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.portfolio.NotTpatUploadActivity">
    <LinearLayout
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView
                android:id="@+id/btn_tpat_upload_act_back"
                android:src="@drawable/back_grey_icon"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="Nado님,"
                android:textSize="20sp"
                android:textColor="#242424"
                android:fontFamily="@font/nanum_square_bold"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="작품을 자랑해 볼까요?"
                android:textSize="20sp"
                android:textColor="#242424"
                android:fontFamily="@font/nanum_square_bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RelativeLayout
                android:id="@+id/rl_not_tpat_upload_act_album"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/upload_tpat_port_border_gray"
                android:layout_width="wrap_content"
                android:padding="1dp"
                android:layout_height="172dp">
            <LinearLayout
                    android:id="@+id/ll_not_tpat_upload_act_album"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pofol_upload_img"/>
                <TextView
                        android:text="작품 커버 이미지 업로드하기"
                        android:textSize="17sp"
                        android:textColor="#484848"
                        android:fontFamily="@font/nanum_square_bold"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="파일 크기 | 최대 25MB 이하"
                        android:textSize="13sp"
                        android:textColor="#a2a2a2"
                        android:fontFamily="@font/nanum_square_regular"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="파일 형식 | .jpg, .png"
                        android:textSize="13sp"
                        android:textColor="#a2a2a2"
                        android:fontFamily="@font/nanum_square_regular"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                    android:id="@+id/cv_not_tpat_upload_acr_album"
                    android:visibility="invisible"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/img_not_tpat_upload_act_album"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <EditText
                android:id="@+id/et_not_tpat_upload_act_title"
                android:hint="제목을 입력해주세요"
                android:textColorHint="#838383"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_square_bold"
                android:background="@null"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/et_not_tpat_upload_act_content"
                android:hint="작품을 빛내줄 한 줄을 적어주세요 \n (최대 40자 이내)"
                android:inputType="textMultiLine|textLongMessage"
                android:textSize="13sp"
                android:textColorHint="#a2a2a2"
                android:fontFamily="@font/nanum_square_light"
                android:lineSpacingExtra="8dp"
                android:maxLength="40"
                android:background="@null"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="url 첨부"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_square_bold"
                android:textColor="#242424"
                android:background="@null"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/et_not_tpat_upload_act_url"
                android:hint="https://youtu.be/hLp0YKfKHZA"
                android:textColorHint="#a2a2a2"
                android:textSize="13sp"
                android:background="@drawable/url_border_gray"
                android:paddingVertical="14dp"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
            android:id="@+id/btn_not_tpat_upload_act_submit"
            android:text="작품 올리기"
            android:textColor="#fff"
            android:textSize="15sp"
            android:fontFamily="@font/nanum_extra_bold"
            android:background="@drawable/signup_nextbtn"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>
</RelativeLayout>