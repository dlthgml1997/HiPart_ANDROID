<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="176dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/hipat_list_box"
                    android:layout_marginBottom="20dp"
    android:id="@+id/rl_item_frag_search_item">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_marginHorizontal="24dp"
                      android:layout_marginVertical="24dp"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="80dp"
                          android:orientation="horizontal">
                <ImageView android:layout_width="80dp" android:layout_height="80dp"
                           android:src="@drawable/main_profile_photo_image"
                           android:id="@+id/iv_item_frag_search_photo"/>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent"

                                android:layout_marginLeft="16dp">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="vertical">
                        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:orientation="vertical">
                                <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                                              android:orientation="horizontal"
                                              android:gravity="center_vertical">
                                    <TextView
                                            style="@style/nanum_bold"
                                            android:textSize="20sp"
                                            android:textColor="#242424"
                                            android:lineSpacingExtra="3sp"
                                            android:text="Nado"
                                            android:id="@+id/tv_item_frag_sear_name"
                                    />
                                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                                               android:src="@drawable/youtube_grey_img"
                                               android:layout_marginLeft="8dp"
                                               android:id="@+id/iv_item_frag_search_platform"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:layout_alignParentRight="true"
                                          android:orientation="vertical"
                                          android:gravity="center_horizontal">
                                <ToggleButton android:layout_width="16dp" android:layout_height="16dp"
                                              android:background="@drawable/selector_pick_icon"
                                              android:text=""
                                              android:textOn=""
                                              android:textOff=""
                                              android:checked="false"
                                              android:id="@+id/tb_item_frag_search_pick"/>
                                <TextView
                                        style="@style/nanum_bold"
                                        android:textSize="9sp"
                                        android:textColor="#c7c7c7"
                                        android:lineSpacingExtra="1sp"
                                        android:text="224"
                                        android:id="@+id/tv_item_frag_search_pick_num"
                                />
                            </LinearLayout>
                        </RelativeLayout>

                        <TextView
                                style="@style/nanum_regular"
                                android:textSize="12sp"
                                android:textColor="#707070"
                                android:lineSpacingExtra="1sp"
                                android:text="크리에이터"
                                android:layout_marginTop="8dp"
                                android:id="@+id/tv_item_frag_search_type"/>


                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_alignParentBottom="true">

                        <RelativeLayout style="@style/HipartDetailIntroPrimaryTagLayout">
                            <TextView style="@style/nanum_light"
                                      android:textSize="11sp"
                                      android:textColor="@android:color/white"
                                      android:lineSpacingExtra="1sp"
                                      android:gravity="center_horizontal"
                                      android:text="먹방"
                                      android:layout_centerInParent="true"
                                      android:id="@+id/tv_item_frag_search_pd"/>
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView android:layout_width="wrap_content"
                                                                android:layout_height="20dp"
                                                                android:id="@+id/rv_item_frag_search_tag"></android.support.v7.widget.RecyclerView>

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <TextView
                    style="@style/nanum_regular"
                    android:textSize="13sp"
                    android:textColor="#242424"
                    android:lineSpacingExtra="8dp"
                    android:text="안녕하세요~ 먹고 싶은 모든 것들을 영상으로"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_item_frag_search_intro"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

