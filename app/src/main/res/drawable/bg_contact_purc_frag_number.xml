<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                    android:angle="360"
                    android:endColor="#fff"
                    android:gradientRadius="360"
                    android:startColor="#77cccccc"
                    android:type="sweep" />

            <stroke
                    android:width="7dp"
                    android:color="#77cccccc" />
        </shape>
    </item>
    <item
            android:bottom="7dp"
            android:left="7dp"
            android:right="7dp"
            android:top="7dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>